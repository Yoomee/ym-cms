%h1="#{page.title} (List)"

%p=page.text

.listed_pages
  -page.children.each do |page|
    -link_to(page, :class => "child_page") do
      =truncate(page.text, :length => 100)

=options_panel do
  =link_to("Edit page", edit_page_path)
  =link_to("Delete page", page, :method => :destroy, :confirm => "Are you sure?")
  =link_to("Add a subpage", new_child_page_path(:parent_id => page.id))