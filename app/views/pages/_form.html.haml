=semantic_form_for(page, :multipart => true) do |form|
  =form.inputs do
    =form.input(:parent, :collection => Page.where(["id != ?", page.id || 0])) unless Page.count.zero?
    =form.input :title
    =form.input :retained_image, :as => :hidden
    =form.input :image, :as => :file, :label => "Cover image"
    =form.input :text
    =form.input :view_name, :as => :select, :collection => Page::view_names, :include_blank => false, :member_label => "titleize"
    =form.input :published
  =form.buttons do
    =form.commit_button "Save"
    =#link_to("Cancel", page.new_record? ? pages_path : page, :class => "btn")